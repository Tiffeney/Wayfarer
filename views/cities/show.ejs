<div class="container">
        <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= city.image %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= city.name %><i class="material-icons right"></i></span>
          <% if (loggedIn) { %>
            <a href="/cities/<%= city._id %>/posts/new" button class="waves-effect waves-light btn">Add Post</button></a>
          <% } %>

        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
      
        </div>
    </div>
</div>

<% city.posts.forEach (p => { %>
 <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= p.title %></span>
          <p><%= p.body %></p>
        </div>
        <!-- IF LOGGED IN RENDER &  -->
        <% if (loggedIn && String(p.author) == String(currentUser._id) ) { %>
        <div class="card-action">
            <a href="/cities/<%= city._id %>/posts/<%= p._id %>/edit">Edit</a>
            <form method="post" action="/cities/<%= city._id%>/posts/<%= p._id%>?_method=DELETE">
                <button class="btn btn-danger btn-block" type="submit">Delete</button>
            </form>
        </div>
        <% } %>
      </div>
    </div>
    <% }) %>
  </div>

 

  