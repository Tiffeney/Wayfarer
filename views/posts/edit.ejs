<div class="container">
    <div class="col-sm-3">
        <h1>Edit A post!</h1>
        <div class="row">
          <form class="col s12" method="post" action="/cities/<%= city_id %>/posts/<%= post_id%>?_method=PUT">
            <div class="row">
              <div class="input-field col s12">
                <textarea name="title" id="textarea1" class="materialize-textarea"></textarea>
                  <label for="textarea1">Title:</label>
                </div>
              </div>
              <div class="row">
                  <div class="input-field col s12">
                    <textarea name="body" class="materialize-textarea"></textarea>
                      <label for="textarea1">Post:</label>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
                    </div>
                </div>
            </form>
            </div>
        </div>
</div>